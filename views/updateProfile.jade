extends layout

block content
	h4 Modifier profile
		if errors
			each error in errors
				.alert.alert-danger= error.msg
	form(method='post', action='/users/updateProfile')
		.form-group
			label Name
			input.form-control(type='text', value=user.name, name='name')
		.form-group
			label Username
			input.form-control(type='text', value=user.username, name='username')
		.form-group
			label Email
			input.form-control(type='email', value=user.email, name='email')
		button.btn.btn-default(type='submit') Modifier
